<launch>

<!-- Cartesian wrench controller -->
  <param name="r_arm_cartesian_wrench_controller/root_name" type="string" value="torso_lift_link" />
  <param name="r_arm_cartesian_wrench_controller/tip_name" type="string" value="r_gripper_tool_frame" />


<!-- Cartesian tff controller -->
  <param name="cartesian_tff_right/autostart" type="bool" value="true" />
  <param name="cartesian_tff_right/root_name" type="string" value="torso_lift_link" />
  <param name="cartesian_tff_right/tip_name" type="string" value="r_gripper_tool_frame" />

  <param name="cartesian_tff_right/twist_to_wrench_trans" value="10.0" />
  <param name="cartesian_tff_right/twist_to_wrench_rot" value="1.0" />

  <param name="cartesian_tff_right/vel_trans/p" value="2.0" />
  <param name="cartesian_tff_right/vel_trans/i" value="0.5" />
  <param name="cartesian_tff_right/vel_trans/d" value="0.0" />
  <param name="cartesian_tff_right/vel_trans/i_clamp" value="1.0" />

  <param name="cartesian_tff_right/vel_rot/p" value="0.3" />
  <param name="cartesian_tff_right/vel_rot/i" value="0.1" />
  <param name="cartesian_tff_right/vel_rot/d" value="0.0" />
  <param name="cartesian_tff_right/vel_rot/i_clamp" value="0.2" />


  <param name="cartesian_tff_right/pos_trans/p" value="10.0" />
  <param name="cartesian_tff_right/pos_trans/i" value="0.5" />
  <param name="cartesian_tff_right/pos_trans/d" value="0.0" />
  <param name="cartesian_tff_right/pos_trans/i_clamp" value="1.0" />

  <param name="cartesian_tff_right/pos_rot/p" value="0.5" />
  <param name="cartesian_tff_right/pos_rot/i" value="0.1" />
  <param name="cartesian_tff_right/pos_rot/d" value="0.0" />
  <param name="cartesian_tff_right/pos_rot/i_clamp" value="0.2" />

  <node pkg="mechanism_control" type="spawner.py" args="$(find pr2_default_controllers)/r_arm_cartesian_wrench_controller.xml $(find pr2_default_controllers)/cartesian_tff_right.xml" output="screen"/>
</launch>

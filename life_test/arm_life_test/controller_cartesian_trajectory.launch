<launch>

<!-- Cartesian trajectory controller -->

  <!-- parameters for trajectory controller -->
  <param name="cartesian_trajectory/root_name" type="string" value="torso_lift_link" />
  <param name="cartesian_trajectory/tip_name" type="string" value="r_wrist_roll_link" />
  <param name="cartesian_trajectory/max_vel_trans" value="1.0" />
  <param name="cartesian_trajectory/max_vel_rot" value="1.0" />
  <param name="cartesian_trajectory/max_acc_trans" value="0.1" />
  <param name="cartesian_trajectory/max_acc_rot" value="0.1" />

  <!-- parameters for pose controller -->
  <param name="cartesian_pose/p" value="20.0" />
  <param name="cartesian_pose/i" value="0.1" />
  <param name="cartesian_pose/d" value="0.0" />
  <param name="cartesian_pose/i_clamp" value="0.5" />

  <!-- parameters for twist controller -->
  <param name="cartesian_twist/trans_p" value="20.0" />
  <param name="cartesian_twist/trans_i" value="0.5" />
  <param name="cartesian_twist/trans_d" value="0.0" />
  <param name="cartesian_twist/trans_i_clamp" value="1.0" />
  <param name="cartesian_twist/rot_p" value="1.5" />
  <param name="cartesian_twist/rot_i" value="0.1" />
  <param name="cartesian_twist/rot_d" value="0.0" />
  <param name="cartesian_twist/rot_i_clamp" value="0.2" />

  <node pkg="mechanism_control" type="spawner.py" args="$(find arm_life_test)/cartesian_trajectory.xml" />
</launch>

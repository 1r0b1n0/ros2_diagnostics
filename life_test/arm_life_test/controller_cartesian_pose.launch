<launch>

<!-- Cartesian wrench controller -->
  <param name="cartesian_wrench/autostart" type="bool" value="true" />
  <param name="cartesian_wrench/root_name" type="string" value="torso_lift_link" />
  <param name="cartesian_wrench/tip_name" type="string" value="r_gripper_tool_frame" />


<!-- Cartesian twist controller -->
  <param name="cartesian_twist/root_name" type="string" value="torso_lift_link" />
  <param name="cartesian_twist/tip_name" type="string" value="r_gripper_tool_frame" />

  <param name="cartesian_twist/ff_trans" value="0.0" />
  <param name="cartesian_twist/ff_rot" value="0.0" />

  <param name="cartesian_twist/fb_trans/p" value="20.0" />
  <param name="cartesian_twist/fb_trans/i" value="0.5" />
  <param name="cartesian_twist/fb_trans/d" value="0.0" />
  <param name="cartesian_twist/fb_trans/i_clamp" value="1.0" />

  <param name="cartesian_twist/fb_rot/p" value="0.5" />
  <param name="cartesian_twist/fb_rot/i" value="0.1" />
  <param name="cartesian_twist/fb_rot/d" value="0.0" />
  <param name="cartesian_twist/fb_rot/i_clamp" value="0.2" />


<!-- Cartesian pose controller -->
  <param name="cartesian_pose/root_name" type="string" value="torso_lift_link" />
  <param name="cartesian_pose/tip_name" type="string" value="r_gripper_tool_frame" />

  <param name="cartesian_pose/p" value="20.0" />
  <param name="cartesian_pose/i" value="0.1" />
  <param name="cartesian_pose/d" value="0.0" />
  <param name="cartesian_pose/i_clamp" value="0.5" />

  <node pkg="mechanism_control" type="spawner.py" args="$(find arm_life_test)/cartesian_wrench.xml $(find arm_life_test)/cartesian_twist.xml $(find arm_life_test)/cartesian_pose.xml" />
</launch>

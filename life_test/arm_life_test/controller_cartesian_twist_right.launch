<launch>

<!-- Cartesian wrench controller -->
  <param name="r_arm_cartesian_wrench_controller/root_name" type="string" value="torso_lift_link" />
  <param name="r_arm_cartesian_wrench_controller/tip_name" type="string" value="r_gripper_tool_frame" />


<!-- Cartesian twist controller -->
  <param name="cartesian_twist_right/root_name" type="string" value="torso_lift_link" />
  <param name="cartesian_twist_right/tip_name" type="string" value="r_gripper_tool_frame" />
  <param name="cartesian_twist_right/output" type="string" value="r_arm_cartesian_wrench_controller" />

  <param name="cartesian_twist_right/ff_trans" value="0.0" />
  <param name="cartesian_twist_right/ff_rot" value="0.0" />

  <param name="cartesian_twist_right/fb_trans/p" value="20.0" />
  <param name="cartesian_twist_right/fb_trans/i" value="0.5" />
  <param name="cartesian_twist_right/fb_trans/d" value="0.0" />
  <param name="cartesian_twist_right/fb_trans/i_clamp" value="1.0" />

  <param name="cartesian_twist_right/fb_rot/p" value="0.5" />
  <param name="cartesian_twist_right/fb_rot/i" value="0.1" />
  <param name="cartesian_twist_right/fb_rot/d" value="0.0" />
  <param name="cartesian_twist_right/fb_rot/i_clamp" value="0.2" />

  <node pkg="mechanism_control" type="spawner.py" args="$(find pr2_default_controllers)/r_arm_cartesian_wrench_controller.xml $(find pr2_default_controllers)/cartesian_twist_right.xml" output="screen" />
</launch>

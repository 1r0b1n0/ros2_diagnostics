<launch>

<!-- Wrist must have passed qualification, and have been programmed with -wg005 MCB's -->
<!-- Call this program from the localhost, after setting ROS_TEST_HOST -->
<!-- Turn on power, then configure MCB's with 'roslaunch configure_l_wrist.launch -->

<machine name="xenomai_root" user="root" address="$(env ROS_TEST_HOST)" ros-root="$(env ROS_ROOT)" ros-package-path="$(env ROS_PACKAGE_PATH)" default="never"/>

<machine name="localhost" address="localhost" ros-root="$(env ROS_ROOT)" ros-package-path="$(env ROS_PACKAGE_PATH)" default="true"/>

<!-- configure_mcbs -->
<!-- CHANGE 'fl' TO THE NAME OF CASTER YOU WANT TO CONFIGURE -->
<node machine="xenomai_root" pkg="qualification" type="configure_mcbs.py" args="--motor=fl_caster_l_motor,0 --motor=fl_caster_r_wheel_motor,1 --motor=fl_caster_rotation_motor,2" />

<!-- service -->
<node pkg="qualification" type="confirm_conf.py" output="screen"/>

</launch>
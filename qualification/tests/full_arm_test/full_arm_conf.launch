<launch>

<machine name="xenomai_root" user="root" address="$(env ROS_TEST_HOST)" ros-root="$(env ROS_ROOT)" ros-package-path="$(env ROS_PACKAGE_PATH)" default="never"/>   

<machine name="localhost" address="localhost" ros-root="$(env ROS_ROOT)" ros-package-path="$(env ROS_PACKAGE_PATH)" default="true"/> 

<!-- configure_mcbs -->
<node machine="xenomai_root" pkg="qualification" type="configure_mcbs.py" args="--motor=r_shoulder_pan_motor,0 --motor=r_shoulder_lift_motor,1 --motor=r_upper_arm_roll_motor,2 --motor=r_elbow_flex_motor,3 --motor=r_forearm_roll_motor,4 --motor=r_wrist_l_motor,5 --motor=r_wrist_r_motor,6 --motor=r_gripper_motor,7" />

<!-- service -->
<node pkg="qualification" type="confirm_conf.py" output="screen"/>

</launch>
